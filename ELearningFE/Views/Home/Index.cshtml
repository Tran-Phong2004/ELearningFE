@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .course-card {
        transition: all 0.3s ease;
        border: none;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .course-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
    }

    .icon-box {
        width: 60px;
        height: 60px;
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        background: var(--primary-color);
        color: white;
        margin-bottom: 1.5rem;
    }

    .feature-card {
        border: none;
        border-radius: 15px;
        padding: 2rem;
        transition: all 0.3s ease;
        background: rgba(255,255,255,0.9);
        backdrop-filter: blur(5px);
    }

    footer {
        background: #1e293b;
        color: white;
        position: relative;
        overflow: hidden;
    }

    .footer-links a {
        color: #94a3b8;
        text-decoration: none;
        transition: color 0.3s;
    }

    .footer-links a:hover {
        color: var(--primary-color);
    }

    .search-input {
        border-radius: 50px;
        padding: 1.25rem 2rem;
        border: none;
    }

    .btn-primary {
        background: var(--primary-color);
        border: none;
        padding: 0.8rem 2rem;
        border-radius: 50px;
        transition: all 0.3s;
    }

    .btn-primary:hover {
        background: var(--secondary-color);
        transform: translateY(-2px);
    }

    .rating-stars {
        color: var(--accent-color);
    }

    .course-price {
        font-size: 1.25rem;
        color: var(--primary-color);
        font-weight: 600;
    }

    .course-card {
        margin-bottom: 1.5rem;
    }
</style>

    <!-- Hero Section -->
    <section class="hero-section text-center text-white">
        <div class="container position-relative">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <h1 class="display-4 fw-bold mb-4">Học tập thông minh - Tương lai rộng mở</h1>
                    <p class="lead mb-5">Khám phá hơn 1000+ khóa học chất lượng cao từ các chuyên gia hàng đầu</p>

                    <div class="input-group mb-3 mx-auto" style="max-width: 600px;">
                        <input type="text" class="form-control search-input" placeholder="Tìm kiếm khóa học...">
                        <button class="btn btn-primary px-4" type="button">
                            <i class="fas fa-search me-2"></i>Tìm kiếm
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Courses Section -->
    <section class="py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="fw-bold mb-3">Khóa học nổi bật</h2>
                <p class="text-muted">Các khóa học được yêu thích nhất hiện nay</p>
            </div>

            <div class="row g-4">
                <!-- Course Card 1 -->
                <div class="col-lg-4 col-md-6">
                    <div class="course-card rounded-3">
                        <img src="https://source.unsplash.com/random/800x600?coding" class="card-img-top" alt="...">
                        <div class="p-4">
                            <div class="d-flex justify-content-between mb-3">
                                <div class="rating-stars">
                                    <i class="fas fa-star"></i> 4.9
                                </div>
                                <span class="course-price">1.500.000₫</span>
                            </div>
                            <h5 class="fw-bold mb-3">Lập trình Fullstack</h5>
                            <div class="d-flex align-items-center">
                                <img src="https://source.unsplash.com/random/100x100?face"
                                     class="rounded-circle me-2" width="40" alt="Teacher">
                                <span>Giảng viên: John Doe</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Thêm các khóa học khác tại đây -->

            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="feature-card shadow-sm">
                        <div class="icon-box">
                            <i class="fas fa-video"></i>
                        </div>
                        <h4 class="fw-bold mb-3">Học online mọi lúc</h4>
                        <p class="text-muted">Truy cập bài giảng 24/7 từ mọi thiết bị</p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="feature-card shadow-sm">
                        <div class="icon-box">
                            <i class="fas fa-certificate"></i>
                        </div>
                        <h4 class="fw-bold mb-3">Chứng nhận hoàn thành</h4>
                        <p class="text-muted">Nhận chứng chỉ có giá trị sau khóa học</p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="feature-card shadow-sm">
                        <div class="icon-box">
                            <i class="fas fa-headset"></i>
                        </div>
                        <h4 class="fw-bold mb-3">Hỗ trợ 24/7</h4>
                        <p class="text-muted">Đội ngũ hỗ trợ luôn sẵn sàng giúp đỡ</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="py-5">
        <div class="container">
            <div class="row g-5">
                <div class="col-md-4">
                    <h4 class="fw-bold mb-4">EduNext</h4>
                    <p class="text-muted">Nền tảng giáo dục trực tuyến hàng đầu Việt Nam</p>
                </div>

                <div class="col-md-2">
                    <h5 class="fw-bold mb-4">Về chúng tôi</h5>
                    <ul class="list-unstyled footer-links">
                        <li class="mb-2"><a href="#">Giới thiệu</a></li>
                        <li class="mb-2"><a href="#">Đội ngũ</a></li>
                        <li class="mb-2"><a href="#">Tuyển dụng</a></li>
                    </ul>
                </div>

                <div class="col-md-2">
                    <h5 class="fw-bold mb-4">Hỗ trợ</h5>
                    <ul class="list-unstyled footer-links">
                        <li class="mb-2"><a href="#">FAQ</a></li>
                        <li class="mb-2"><a href="#">Liên hệ</a></li>
                        <li class="mb-2"><a href="#">Điều khoản</a></li>
                    </ul>
                </div>

                <div class="col-md-4">
                    <h5 class="fw-bold mb-4">Theo dõi chúng tôi</h5>
                    <div class="d-flex gap-3">
                        <a href="#" class="btn btn-outline-light rounded-circle p-2">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="btn btn-outline-light rounded-circle p-2">
                            <i class="fab fa-youtube"></i>
                        </a>
                        <a href="#" class="btn btn-outline-light rounded-circle p-2">
                            <i class="fab fa-tiktok"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

   
